html
    head
        include mixins/header
        +header
        script(src="/js/createDocument.js")
    body(data-bs-theme="dark")
        include mixins/navbar
        +navbar

        .toast-container.position-fixed.bottom-0.end-0.p-3
            #toast.toast(role="alert", aria-live="assertive", aria-atomic="true").bg-danger
                .toast-header
                    strong.me-auto Missing Input
                    button(type="button", class="btn-close", data-bs-dismiss="toast", aria-label="Close")
                .toast-body
                    p Please fill out the entire form to submit.

        .content
            h1 School Account - #{title}

            .input-group.mt-3
                span.input-group-text Student Full Name
                input.form-control#fullname(type="text")

            .input-group.mt-3
                span.input-group-text Document Name
                input.form-control#name(type="text")

            .input-group.mt-3
                span.input-group-text Document Image
                input.form-control#image(type="file")

            .d-flex(style="justify-content: center")
                button.btn.btn-success.mt-3#submit Submit
            
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")